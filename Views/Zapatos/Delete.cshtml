@model Proyecto_P1.Models.Zapatos

@{
    ViewData["Title"] = "Compra";
}

<h1>Comprar</h1>

<h3>Estas por comprar unos zapatos!!</h3>
<div>
    <h4>Tu compra</h4>
    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            Marca: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
           Modelo: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class = "col-sm-2">
            Precio:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Cantidad: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdZapatos" />
        <input type="submit" value="Comprar" class="btn btn-danger" style="margin-top:15px"/> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
